<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <contextName>AideSCIT</contextName>
    <!--自定义日志转换规则，添加颜色高亮支持-->
    <conversionRule conversionWord="colored"
                    converterClass="io.github.sgpublic.aidescit.api.core.spring.logback.converter.ColoredConsoleConverter"/>

    <!--设置日志输出目录-->
    <property name="log.path" value="./log"/>

    <!--输出到控制台的 appender-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!--自定义过滤器，自动判断 debug 环境-->
        <filter class="io.github.sgpublic.aidescit.api.core.spring.logback.filter.ConsoleFilter" />
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <!--自定义格式化日志布局，优化日志定位支持-->
            <layout class="io.github.sgpublic.aidescit.api.core.spring.logback.ConsolePatternLayout">
                <pattern>%colored(%d{HH:mm:ss.SSS} %-5level \(%trace\): %unc%msg%n)</pattern>
            </layout>
        </encoder>
    </appender>

    <!--输出到文件的 appender-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--自定义过滤器-->
        <filter class="io.github.sgpublic.aidescit.api.core.spring.logback.filter.FileFilter" />
        <!--设置以 html 方式输出日志-->
        <file>${log.path}/logback.html</file>
        <!--设置日志分段-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--设置分段命名规则-->
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/logback.%i.html</fileNamePattern>
            <!--设置日志最大保留天数-->
            <MaxHistory>30</MaxHistory>
            <!--设置日志最大文件大小-->
            <maxFileSize>1MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.html.HTMLLayout">
                <pattern>%level%d{yyyy-MM-dd HH:mm:ss.SSS}%trace%unf%msg</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="ALL">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

</configuration>