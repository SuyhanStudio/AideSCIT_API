<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <contextName>SCITEduTool</contextName>
    <conversionRule conversionWord="colored" converterClass="com.sgpublic.scit.tool.spring.logback.ColoredConsoleConverter"/>

    <property name="log.path" value="./log"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="com.sgpublic.scit.tool.spring.logback.filter.ConsoleFilter" />
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.sgpublic.scit.tool.spring.logback.ConsolePatternLayout">
                <pattern>%colored(%d{HH:mm:ss.SSS} %-5level \(%trace\): %unc%msg%n)</pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="com.sgpublic.scit.tool.spring.logback.filter.FileFilter" />
        <file>${log.path}/logback.html</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/logback.%i.html</fileNamePattern>
            <MaxHistory>30</MaxHistory>
            <maxFileSize>1MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.html.HTMLLayout">
                <pattern>%level%d{yyyy-MM-dd HH:mm:ss.SSS}%trace%unf%msg</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="ALL">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>

</configuration>